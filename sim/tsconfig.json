{
	"compilerOptions": {
			"lib": ["es2020"],
			"emitDeclarationOnly": true,
			"outDir": "../dist",
			"declaration": true,
			"target": "esnext",
			"module": "commonjs",
			"strict": true,
			"allowJs": true,
			"checkJs": true,
			"incremental": true,
			"allowUnreachableCode": false,
			"allowImportingTsExtensions": true,
	},
	"types": ["node"],
	"include": [
			"./global-types.ts",
			"./index.ts",
	]
}
